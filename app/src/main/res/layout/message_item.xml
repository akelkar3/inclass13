<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewReadUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/radioButton"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewDatenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewReadUserName"
        android:layout_alignBottom="@+id/textViewReadUserName"
        android:layout_marginStart="74dp"
        android:layout_toEndOf="@+id/textViewReadUserName"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/textViewMsgPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_alignStart="@+id/textViewReadUserName"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="89dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewReadUserName"
        android:checked="true"
        android:focusable="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="40dp" />
</RelativeLayout>